# {{{ My Funcs

qload() {
    uqc load $1 | tee /dev/tty | pbcopy
}
qsave() {
    uqc save $1
}

cistatus() {
    hub ci-status -v
    sleep 20
    hub ci-status ${SHA}
    RET=$?
    # Exit code of 2 means pending
    while [ ${RET} -eq 2 ]; do
      sleep 20
      hub ci-status ${SHA}
      RET=$?
    done
    hub ci-status -v
}

alert() {
    osascript -e 'display notification "alert"'
}


